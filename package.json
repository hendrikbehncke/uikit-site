{
    "type": "module",
    "scripts": {
        "dev": "vite dev --open",
        "build": "vite build",
        "preview": "vite preview",
        "postinstall": "symlink-dir ./node_modules/uikit ./static/assets/uikit && cd ./static/assets/uikit && pnpm install",
        "compile": "pnpm compile-less && pnpm compile-uikit-tests",
        "compile-less": "make-dir static/css && lessc less/theme.less > static/css/theme.css --rewrite-urls=all --clean-css",
        "compile-uikit-tests": "cd ./static/assets/uikit && pnpm compile-js tests"
    },
    "packageManager": "pnpm@10.16.1",
    "devDependencies": {
        "@docsearch/css": "^4.0.1",
        "@docsearch/js": "^4.0.1",
        "@eslint/js": "^9.36.0",
        "@sveltejs/adapter-static": "3.0.9",
        "@sveltejs/kit": "^2.43.0",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "clipboard": "2.0.11",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.12.4",
        "execa": "^9.6.0",
        "github-slugger": "^2.0.0",
        "globals": "^16.4.0",
        "highlight.js": "11.11.1",
        "less": "^4.4.1",
        "less-plugin-clean-css": "^1.6.0",
        "make-dir-cli": "^4.0.0",
        "marked": "^16.3.0",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-svelte": "^3.4.0",
        "svelte": "^5.39.4",
        "symlink-dir": "^6.0.5",
        "uikit": "3.23.13",
        "vite": "^7.1.7"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search"
            ]
        }
    }
}
